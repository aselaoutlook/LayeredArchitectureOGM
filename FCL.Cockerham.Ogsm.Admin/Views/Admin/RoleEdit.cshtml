@model FCL.Cockerham.Ogsm.Entities.DTOs.RoleDto
@{
    ViewBag.Title = "Edit " + Model.RoleDescription + " Role";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    });
</script>
@using (Html.BeginForm())
{
    <div class="panel panel-primary table-responsive">
        <div class="panel-heading">
            Role Details
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover" style="width: 80%">
                <tr>
                    <td colspan="2" style="background-color:none;border:none;">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.RoleId)
                    </td>
                </tr>
                <tr>
                    <td style='width: 120px;font-weight: bold'>
                        @Html.LabelFor(model => model.RoleName, new { @class = "form-label" })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RoleName)
                    </td>
                </tr>
                <tr>
                    <td style='font-weight: bold'>
                        @Html.LabelFor(model => model.RoleDescription, new { style = "vertical-align:top" })
                    </td>
                    <td>
                        @Html.TextAreaFor(model => model.RoleDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RoleDescription)
                    </td>
                </tr>
                <tr>
                    <td style='font-weight: bold'>
                        @Html.LabelFor(model => model.IsSysAdmin, "System Role", new { @class = "form-label" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.IsSysAdmin, new { style = "vertical-align:top" })
                        @Html.ValidationMessageFor(model => model.IsSysAdmin)
                    </td>
                </tr>
            </table>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
}

<div class="panel panel-primary table-responsive">
    <div class="panel-heading">
        Permissions Associated with this Role
    </div>
    <div class="panel-body">
        @Html.Partial("_ListPermissions", Model)
        <br />
        @Html.Partial("_AddPermission2PermissionsTable4Role", Model)
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Go to Permissions", "PermissionIndex", "Admin")
        &nbsp;|&nbsp;
        @Html.ActionLink("Go to Roles", "RoleIndex", "Admin")
    </div>
</div>