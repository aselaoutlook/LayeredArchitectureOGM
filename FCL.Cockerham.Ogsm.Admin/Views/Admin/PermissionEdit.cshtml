@model FCL.Cockerham.Ogsm.Entities.DTOs.PermissionDto
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    });
</script>
<div class="panel">
    @using (Html.BeginForm())
    {
        <div class="panel panel-primary table-responsive">
            <div class="panel-heading">
                Permission Details
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover" style="width:80%;">
                    <tr>
                        <td colspan="2">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.PermissionId)
                        </td>
                    </tr>
                    <tr>
                        <td style='width: 120px;font-weight: bold'>
                            @Html.LabelFor(model => model.PermissionDescription, "Description", new { @class = "form-label" })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.PermissionDescription, new { style = "width:450px", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PermissionDescription)
                        </td>
                    </tr>
                </table>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Update Permission" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<div class="panel panel-primary table-responsive">
    <div class="panel-heading">
        Roles Associated with this Permission
    </div>
    <div class="panel-body">
        @Html.Partial("_ListRolesTable4Permission", Model)

        @Html.Partial("_AddRole4Permission", Model)
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Go to Permissions", "PermissionIndex", "Admin")
    </div>
</div>
