<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
        $('#AddRole').click(function () {
            var _userId = $('#UserId').val();
            var _id = $('#RoleId').val();

            alert(_id);

            if (_userId == '') {
                return false;
            }

            var _parameters = { userId: _userId, id: _id };
            $.ajax({
                url: "/Admin/AddUserRoleReturnPartialView",
                type: "GET",
                data: _parameters,
                success: function (data, textStatus, jqXHR) {
                    $('#RolesTable').html(data);
                }
            });
        });
    });
</script>
<input name='UserId' id='UserId' type="hidden" value="@ViewBag.UserId" />
<div class="panel panel-primary table-responsive" style="width:30%;">
    <div class="panel-heading">
        Add Role To User
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <td>
                    Role:
                </td>
                <td>
                    @Html.DropDownList("RoleId", null, string.Empty, new { style = "width:250px", @class = "form-control" })
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="button" id="AddRole" value="Add Role" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </div>
</div>