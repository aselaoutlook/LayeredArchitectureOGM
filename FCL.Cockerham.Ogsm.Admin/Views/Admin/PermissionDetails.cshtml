@model FCL.Cockerham.Ogsm.Entities.DTOs.PermissionDto
@{
    ViewBag.Title = "Permission Details";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
    });
</script>

<div class="panel panel-primary table-responsive">
    <div class="panel-heading">
        Permission Details
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover" style='width: 80%'>
            <tr>
                <td style='width: 10%; font-weight: bold' class='userTable'>
                    @Html.LabelFor(model => model.PermissionDescription, "Description")
                </td>
                <td class='userTable'>
                    @Html.DisplayFor(model => model.PermissionDescription)
                </td>
            </tr>
        </table>
    </div>
    <div class="panel-footer">
        <input type="button" value="Edit Permission" class="btn btn-primary" onclick="location.href='@Url.Action("PermissionEdit", "Admin", new { id = Model.PermissionId })'" />
    </div>
</div>

<div class="panel panel-primary table-responsive" style='width: 65%'>
    <div class="panel-heading">
        Roles Associated with this Permission
    </div>
    <div class="panel-body">
        @Html.Partial("_ListRolesTable4Permission", Model)
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Go to Permissions", "PermissionIndex", "Admin")
    </div>
</div>