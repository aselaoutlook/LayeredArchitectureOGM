@model FCL.Cockerham.Ogsm.Entities.DTOs.RoleDto
@{
    ViewBag.Title = "Create Role";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    })
</script>

@using (Html.BeginForm())
{    
    <div class="panel panel-primary table-responsive">
        <div class="panel-heading">
            Create Role
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover" style='width: 80%'>
                <tr>
                    <td colspan="4" style="border:none;">
                        @Html.ValidationSummary(true)
                    </td>
                </tr>
                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.RoleName, new { @class = "form-label" })
                    </td>
                    <td style='width: 28%' class='userTable'>
                        @Html.TextBoxFor(model => model.RoleName, new { style = "width:450px", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RoleName)
                    </td>
                    <td style='width: 8%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.IsSysAdmin, "System Role", new { @class = "form-label" })
                    </td>
                    <td style='width: 20%' class='userTable'>
                        @Html.EditorFor(model => model.IsSysAdmin, new { style = "width:450px", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IsSysAdmin)
                    </td>
                </tr>
                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.RoleDescription, new { @class = "form-label" })
                    </td>
                    <td style='width: 28%' class='userTable'>
                        @Html.TextBoxFor(model => model.RoleDescription, new { style = "width:450px", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RoleDescription)
                    </td>
                    <td style='width: 10%; font-weight: bold' class='userTable'></td>
                    <td style='width: 28%' class='userTable'></td>
                </tr>
            </table>
        </div>
        <div class="panel-footer">
            <input type="submit" value="Create Role" class="btn btn-primary" />
            &nbsp;&nbsp;
            @Html.ActionLink("Go to Roles", "RoleIndex", "Admin")
        </div>
    </div>
}
