@model IEnumerable<FCL.Cockerham.Ogsm.Entities.DTOs.PermissionDto>
@{
    ViewBag.Title = "Rights";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
    });
</script>

<div class="panel panel-primary table-responsive">
    <div class="panel-heading">
        Permissions
    </div>
    <div class="panel-body">
        <table id="PermissionTable" class="table table-striped table-hover" style="width: 80%">
            <thead>
            <th>
                Permission
            </th>
            <th style="width: 8%">
                Action
            </th>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.PermissionDescription, "PermissionDetails", new { id = item.PermissionId })
                    </td>
                    <td>
                        <center>
                            <a href="@Url.Action("PermissionEdit", "Admin", new { id = item.PermissionId })">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>

                            <a href="@Url.Action("PermissionDelete", "Admin", new { id = item.PermissionId })">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </center>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        <input type="button" value="Create Permission" class="btn btn-primary" onclick="location.href='@Url.Action("PermissionCreate", "Admin")'" />
        <input type="button" id="importPermissions2" name="importPermissions2" value="Import Permissions" class="btn btn-primary" onclick="location.href='@Url.Action("PermissionsImport", "Admin")'" />
        &nbsp;&nbsp;
        @Html.ActionLink("Go to Roles", "RoleIndex", "Admin")
    </div>
</div>
