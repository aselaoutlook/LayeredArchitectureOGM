@model FCL.Cockerham.Ogsm.Entities.DTOs.PermissionDto
<script type="text/javascript">
    $(document).ready(function () {
        $('#AddPermission').click(function () {          
            var _roleId = $('#RoleId').val();
            var _permissionId = $('#PermissionId').val();


            if (_permissionId == '') {
                return false;
            }

            var _parameters = { permissionId: _permissionId, roleId: _roleId };
            $.ajax({
                url: "/Admin/AddRole2PermissionReturnPartialView",
                type: "GET",
                data: _parameters,
                success: function (data, textStatus, jqXHR) {
                    $('#RolesTable').html(data);
                    $('#RoleId').val("");
                }
            });
        });        
    });
</script>
@Html.HiddenFor(model => model.PermissionId)

<div class="panel panel-primary table-responsive" style="width:45%;">
    <div class="panel-heading">
        Add Permission To Role
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <td>
                    Role:
                </td>
                <td>
                    @Html.DropDownList("RoleId", null, string.Empty, new { style = "width:350px", @class = "form-control" })                    
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="button" id="AddPermission" value="Add Permission" class="btn btn-primary" />
                </td>
            </tr>
        </table>
    </div>
</div>