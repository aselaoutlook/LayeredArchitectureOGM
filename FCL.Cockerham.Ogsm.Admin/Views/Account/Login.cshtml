@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Stratus OGSM - Client Portal Login";
}

<div align="center">
    <div class="login-box">
        <div class="login-box-body">
            <form method="post" action="Validate" class="form-horizontal">
                <div class="mdl-dialog sign-in-modal">
                    <h4 class="mdl-dialog__title sign-in-modal-title">
                        <div class="modal-logo-wrap"><img src="images/logo.png" alt=""> </div>
                    </h4>
                    <div class="mdl-dialog__content sign-in-modal-content">
                        <h1>Sign in</h1>

                        <div class="form-group has-feedback">
                            <input id="txtUsername" name="Username" type="text" placeholder="Username" class="form-control">
                            <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input id="txtPassword" name="Password" type="password" placeholder="Password" class="form-control">
                            <span class="form-control-feedback"><i class="fa fa-lock" aria-hidden="true"></i>
</span>
                        </div>
                        <div class="modal-button-holder">
                            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent login-button btn btn-primary">Sign in</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>