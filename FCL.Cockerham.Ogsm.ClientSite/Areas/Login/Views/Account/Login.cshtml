@{
    ViewBag.Title = "Stratus OGSM - Client Portal Login";
}

<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Strategy Lighthouse™</b></a>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form method="post" action="validate" class="form-horizontal">
            <div class="form-group has-feedback">
                <input id="txtUsername" name="Username" type="text" placeholder="Username" class="form-control">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input id="txtPassword" name="Password" type="password" placeholder="Password" class="form-control">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                    </div>
                </div>
                <div id="sign-in-div" class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div>
                        &nbsp;
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center">
                    <div>
                        Copyright <strong>&copy;</strong> 2016 <strong><a href="http://www.stratustms.com" target="_blank">Cockerham & Associates, LLC</a>.</strong>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 text-center">
                    <div>
                        Powered by <strong><a href="http://www.fclanka.com" target="_blank">Four Corners Lanka Pvt Ltd</a>.</strong>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


