<form id="frmCreateOwner" name="frmAssessGoalTargets" class="css-form">

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Filter By</h3>
        </div>
        <div class="box-body">
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">                        
                        <select id="ddlPillarId" name="ddlPillarId" required ng-model="Pillar.PillarId" class="form-control"
                                ng-change="LoadGoal()" ng-options="pillar.Name for pillar in Pillar track by pillar.PillarId">
                            <option value="">Select Pillar</option>
                        </select>
                    </div>
                    <div class="form-group">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <select id="ddlGoalId" name="ddlGoalId" ng-disabled="!Goal" ng-required="true" ng-model="Goal.GoalId" class="form-control"
                                ng-change="LoadById()" ng-options="goal.Name for goal in Goal track by goal.GoalId">
                            <option value="">Select Goal</option>
                        </select>
                    </div>
                    <div class="form-group">
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Goal Assessment</h3>
        </div>
        <div class="box-body">
            <input type="hidden" ng-model="GoalTargets.GoalId" name="txtGoalId" id="txtGoalId" />
            <div class="col-md-8">
                <div class="form-group">
                    <label class="form-label" for="TargetValue">Target</label>
                    <input id="txtTargetValue" ng-model="GoalTargets.Target" name="TargetValue" type="number"
                           ng-required="true" class="form-control" style="width:40% !important" />
                </div>
                <div class="form-group">
                    <label class="form-label" for="TargetDescValue">Target Descriptor</label>
                    <input id="txtTargetDescValue" ng-model="GoalTargets.TargetDesc" name="TargetDescValue" type="number"
                           ng-required="true" class="form-control" style="width:40% !important" />
                </div>

                <label class="form-label">Assessment</label>                
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Year</th>
                            <th>Value</th>
                            <th>Results</th>
                            <th>Target End Date</th>
                        </tr>
                        <tr ng-repeat="target in GoalTargets.GoalTargets">
                            <td>{{target.YearName}}</td>
                            <td>
                                <input id="txtYearValue" ng-model="GoalTargets.GoalTargets[$index].YearValue" name="YearValue" type="number"
                                       ng-required="true" />
                            </td>
                            <td>
                                <input id="txtResults" ng-model="GoalTargets.GoalTargets[$index].Results" name="Results" type="number"
                                       ng-required="true" />
                            </td>
                            <td><span class="badge bg-red">{{target.EndDate | date:'shortDate'}}</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-6">
            </div>
        </div>
        <div class="box-footer">
            <input type="reset" id="btnCancel" value="Cancel" class="btn" ng-click="Clear()">
            <input type="button" id="btnUpdate" name="btnUpdate" value="Update" class="btn btn-info pull-right" ng-click="Update()" ng-disabled="frmCreateOwner.$invalid">
        </div>
    </div>
</form>

