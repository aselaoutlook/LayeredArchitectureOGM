@model FCL.Cockerham.Ogsm.Entities.DTOs.CountryDto

<div class="box-header with-border">
    <h3 class="box-title">Add New Country</h3>
</div>

<div class="box-body">
    <form id="frmCreateCountry" name="frmCreateCountry" ng-model-options="{ allowInvalid: true}" class="css-form">
        <input type="hidden" ng-model="Country.CountryId" name="txtCountryId" id="txtCountryId" />
        <div class="form-group">
            @Html.LabelFor(model => model.GlobalRegionId, "Global Region", new { @class = "form-label" })
            <select id="ddlGlobalRegionId" name="ddlGlobalRegionId" required ng-model="Country.GlobalRegionId" class="form-control"
                    ng-options="region.Name for region in GlobalRegion track by region.GlobalRegionId">
                <option value="">Select Global Region</option>
            </select>
            <span class="text-danger pull-right" ng-show="frmCreateCountry.ddlGlobalRegionId.$touched && frmCreateCountry.ddlGlobalRegionId.$error.required">Select Global Region</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            <input id="txtCountryName" required ng-model="Country.Name" name="Name" type="text" ng-maxlength="50" placeholder="Enter Country Name" class="form-control" />
            <span class="text-danger pull-right" ng-show="frmCreateCountry.Name.$touched && frmCreateCountry.Name.$error.required">Name is Required.</span>
            <span class="text-danger pull-right" ng-show="frmCreateCountry.Name.$error.maxlength">Max. Leangth 50</span>
        </div>
    </form>
</div>
<div class="box-footer">
    <input type="reset" id="btnCancel" value="Cancel" class="btn" ng-click="Clear()">
    <input type="button" id="btnSave" name="btnSave" value="Save" class="btn btn-info pull-right" ng-click="Save()" ng-disabled="frmCreateCountry.$invalid">     
</div>





