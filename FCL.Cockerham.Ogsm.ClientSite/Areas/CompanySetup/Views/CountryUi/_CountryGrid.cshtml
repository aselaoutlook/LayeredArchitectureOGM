<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Country List</h3>
    </div>
    <div id="gridContent" class="box-body">
        <table id="tblCountrys" class="table table-bordered table-striped" ng-table="countryVm.tableParams">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Global Region</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="country in $data">
                    <td data-title="'Name'">{{country.Name}}</td>
                    <td data-title="'Global Region'">{{country.GlobalRegion.Name}}</td>
                    <td data-title="'Edit'">
                        <button type="button"
                                class="btn btn-default btn-xs pull-right"
                                ng-click="LoadById(country.CountryId)">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            </tbody>
            <tfoot></tfoot>
        </table>
        @Resources.SystemResources.Common_webgrid_row_count_text <span id="rowCount">{{countryVm.tableParams.total()}}</span>
    </div>
</div>