@model FCL.Cockerham.Ogsm.Entities.DTOs.DepartmentDto

<div class="box-header with-border">
    <h3 class="box-title">Add New Objective</h3>
    &nbsp;&nbsp;&nbsp;&nbsp;
    <span id="createObjectiveStatusLoader">
    </span>
</div>

<div class="box-body">
    <form id="frmCreateObjective" name="frmCreateObjective" ng-model-options="{ allowInvalid: true}" class="css-form">
        <input type="hidden" ng-model="Objective.ObjectiveId" name="txtObjectiveId" id="txtObjectiveId" />
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
            <input id="txtObjectiveName" required ng-model="Objective.Name" name="Name" type="text" ng-minlength="3" ng-maxlength="300" placeholder="Enter Objective Name" class="form-control" />
            <span class="text-danger pull-right" ng-show="frmCreateObjective.Name.$touched && frmCreateObjective.Name.$error.required">Name is Required.</span>
            <span class="text-danger pull-right" ng-show="frmCreateObjective.Name.$error.minlength">Min. Leangth 3</span>
            <span class="text-danger pull-right" ng-show="frmCreateObjective.Name.$error.maxlength">Min. Leangth 300</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "form-label" })
            <textarea id="txtObjectiveDescription" required ng-model="Objective.Description" name="Description" rows="3" ng-minlength="3" ng-maxlength="300" placeholder="Enter Description..." class="form-control"></textarea>
            <span class="text-danger pull-right" ng-show="frmCreateObjective.Description.$error.minlength">Min. Leangth 3</span>
            <span class="text-danger pull-right" ng-show="frmCreateObjective.Description.$error.maxlength">Min. Leangth 300</span>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new { @class = "form-label" })
            <input id="chkObjectiveIsActive" ng-model="Objective.IsActive" name="IsActive" type="checkbox" class="checkbox" />
        </div>
    </form>
</div>
<div class="box-footer">
    <input type="reset" id="btnCancel" value="Cancel" class="btn" ng-click="Clear()">
    <input type="button" id="btnSave" name="btnSave" value="Save" class="btn btn-info pull-right" ng-click="Save()" ng-disabled="frmCreateObjective.$invalid">     
</div>





